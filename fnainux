#!/bin/bash

# Fungsi untuk animasi loading
spinner() {
    local pid=$1
    local delay=0.1
    local spinstr='|/-\'
    while [ "$(ps a | awk '{print $1}' | grep $pid)" ]; do
        local temp=${spinstr#?}
        printf " [%c] " "$spinstr"
        local spinstr=$temp${spinstr%"$temp"}
        sleep $delay
        printf "\b\b\b\b\b"
    done
    printf "    \b\b\b\b"
}

clear
echo -e "\033[1;34m=====================================\033[0m"
echo -e "\033[1;34m         FNAI AUTO INSTALLER         \033[0m"
echo -e "\033[1;34m=====================================\033[0m"

echo -e "\n\033[1;37m[FNAI] MENGUPDATE PACKAGE\033[0m"
sudo apt update -y > /dev/null 2>&1 &
spinner $!
sudo apt upgrade -y > /dev/null 2>&1 &
spinner $!
echo -e "\033[1;36m\n✓ Update package selesai\033[0m"

echo -e "\n\033[1;37m[FNAI] MENGINSTALL PYTHON3 DAN PIP3\033[0m"
sudo apt install -y python3 python3-pip > /dev/null 2>&1 &
spinner $!
echo -e "\033[1;36m\n✓ Python3 dan pip3 terinstall\033[0m"

echo -e "\n\033[1;37m[FNAI] MENGINSTALL DEPENDENSI\033[0m"
pip3 install base64 google-generativeai > /dev/null 2>&1 &
spinner $!
echo -e "\033[1;36m\n✓ Dependensi Python terinstall\033[0m"

echo -e "\n\033[1;37m[FNAI] MENGINSTALL FNAI\033[0m"
git clone https://github.com/f0oln3t/fnai.git > /dev/null 2>&1 &
spinner $!
cd fnai
echo -e "\033[1;36m\n✓ FNAI berhasil diinstall\033[0m"

echo -e "\n\033[1;34m=====================================\033[0m"
echo -e "\033[1;36m[FNAI] SUKSES SEMUA SUDAH TERINSTALL\033[0m"
echo -e "\033[1;37mGunakan perintah berikut untuk menjalankan:\033[0m"
echo -e "\033[1;37mcd fnai && python3 fnai.py\033[0m"
echo -e "\033[1;34m=====================================\033[0m"
