#!/bin/bash

# Warna
BIRU="\033[1;34m"
HIJAU="\033[1;32m"
KUNING="\033[1;33m"
RESET="\033[0m"

# Fungsi animasi loading
loading() {
    local pid=$!
    local spin='|/-\'
    local i=0
    while kill -0 $pid 2>/dev/null; do
        i=$(( (i+1) %4 ))
        printf "\r${BIRU}[FNAI]${RESET} %s %s" "$1" "${spin:$i:1}"
        sleep 0.1
    done
    printf "\r${BIRU}[FNAI]${RESET} %s ${HIJAU}SUKSES${RESET}\n" "$1"
}

(
    pkg update -y &>/dev/null
    pkg upgrade -y &>/dev/null
) & loading "SEDANG MENGECEK DEPENDENCIES"

(
    pkg install python3 -y &>/dev/null
    pkg install python3-pip -y &>/dev/null
) & loading "MENGINSTALL PYTHON3"

(
    pip install base64 -y &>/dev/null
) & loading "MENGINSTALL BASE64"

echo -e "${BIRU}[FNAI]${RESET} ${HIJAU}SEMUA SUKSES, DEPENDENCIES SUDAH DIINSTALL${RESET}"
echo -e "${KUNING}Gunakan: python3 fnai.py untuk menggunakan AI${RESET}"
